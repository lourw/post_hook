{
  "name": "@post-hook/hook-plugin",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@post-hook/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/js:tsc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "tools/hook-plugin/dist",
          "main": "tools/hook-plugin/src/index.ts",
          "tsConfig": "tools/hook-plugin/tsconfig.lib.json",
          "rootDir": "tools/hook-plugin/src",
          "generatePackageJson": false,
          "assets": [
            {
              "input": "./tools/hook-plugin/src",
              "glob": "**/!(*.ts)",
              "output": "."
            },
            {
              "input": "./tools/hook-plugin/src",
              "glob": "**/*.d.ts",
              "output": "."
            }
          ]
        }
      }
    }
  },
  "dependencies": {
    "tslib": "^2.3.0"
  }
}
